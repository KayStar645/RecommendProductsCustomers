                    <li class="nav-item" style="cursor: pointer;">
                        <a class="nav-link" asp-controller="Home" asp-action="Products">Sản phẩm</a>
                    </li>
                    <li class="nav-item" style="cursor: pointer;">
                        <a class="nav-link" href="about.html">Giới thiệu</a>
                    </li>
